<div class="container">
<div class="row">

  <div class="col-lg-6 col-md-4 col-sm-4">
    <h3>Burgers that are not devoured!</h3>
    <ul class="list-group">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <input type="submit" id="devour-burger" value="Devour it!">
            </form>
            {{!-- <button class="btnColor btn btn-success change-devour" type="submit">Devour it!</button> --}}
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  {{!-- <div class="col-lg-4 col-md-4 col-sm-4">
  </div> --}}
  <div class="col-lg-4 col-md-4 col-sm-4 list-group">
    <h3>Burgers that are devoured!</h3>
    <ul>
      <tr>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <input type="submit" id="undevour-burger" value="Un-devour it!">
            </form>
            {{!-- <button class="btnColor btn btn-success change-devour" type="submit">Devour it!</button> --}}
          </li>
        {{/if}}
      {{/each}}
      </tr>
    </ul>
  </div>
  
  <div>
    <h3>Add a Burger</h3>
    <form class="create-form" action="/" method="POST">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
</div>