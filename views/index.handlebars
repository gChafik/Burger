<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  <tr>
   {{#each burgers}}
    {{#unless this.devoured}}
      <td>
        {{this.burger_name}}
      </td>
      <td>
        <form action="/{{this.id}}  ?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="btnColor btn btn-success change-devour" type="submit">Devour it!</button>
        </form>
      </td>
    {{/unless}}
   {{/each}}
  </tr>
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  <tr>
   {{#each burgers}}
    {{#unless this.devoured}}
      <td>
        {{this.burger_name}}
      </td>
      <td>
        <form action="/{{this.id}}  ?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="btnColor btn btn-danger delete" type="delete">Delete it!</button>
        </form>
      </td>
    {{/unless}}
   {{/each}}
  </tr>
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="Devoured" value="0"> No Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
